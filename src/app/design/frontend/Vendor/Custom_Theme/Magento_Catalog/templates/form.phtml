<form data-mage-init='{"validation":{}, "Magento_Catalog/js/validation-check-widget":{}}'>
    <fieldset class="fieldset">
        <div class="field required">
            <label for="promocode" class="label">Promocode</label>
            <div class="control-panel">
                <input id="promocode" 
                       type="text" 
                       class="promocode-input" 
                       data-validate="{required:true, 'validate-promocode': true}">
            </div>
        </div>   
    </fieldset>
    <div class="actions-toolbar">
        <div class="primary">
            <button class="action primary" type="submit"><span>Submit</span></button>
        </div>
    </div>
</form>